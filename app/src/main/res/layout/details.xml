<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:weightSum="2"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/back_button"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Details"
                    android:textSize="70px"
                    android:textColor="@color/black"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/heart"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/topbar">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/main_img"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/plant_name"
            android:layout_below="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Samantha Tree"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/price"
            android:layout_below="@+id/plant_name"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Regular Price $195.00"
                android:paddingTop="20px"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_below="@+id/price"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/menu"
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/plus"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="1"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/minus"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/star"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/star"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/star"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/star"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/star"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/text"
            android:layout_below="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="20dp"
                android:text="it is a long established fact that a reader will be distracted by readabe Content of the page when looking at its layout"
                android:textSize="20dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/button"
            android:layout_below="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Buy Now"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@drawable/layoutbakground"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>